{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "player": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "level": { "type": "integer" }
      },
      "required": ["name", "level"],
      "additionalProperties": false
    },
    "inventory": {
      "type": "array"
    },
    "room": {
      "type": "string"
    },
    "health": {
      "type": "integer"
    },
    "stamina": {
      "type": "integer"
    },
    "options": {
      "type": "object"
    }
  },
  "required": ["player", "inventory"],
  "additionalProperties": false
}

